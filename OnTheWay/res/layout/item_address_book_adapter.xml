<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_index"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/dp50"
        android:paddingRight="@dimen/dp50"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:layout_weight="1"
        android:background="#ebebeb"
        android:textColor="#969696"
        android:textSize="@dimen/sp45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp30"
        android:paddingTop="@dimen/dp30" >

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_marginLeft="@dimen/dp50"
            android:scaleType="fitCenter"
            android:src="@drawable/defpic" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp150"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="@dimen/sp45" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp150"
        android:background="#d9d9d9" />

</LinearLayout>