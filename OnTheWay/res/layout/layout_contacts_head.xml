<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_newfriends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp170"
        android:background="@drawable/btn_contacts_head_press"
        android:clickable="true" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp50"
            android:src="@drawable/defpic" />

        <TextView
            android:id="@+id/tv_newfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@+id/img1"
            android:text="新的朋友"
            android:textColor="#000000"
            android:textSize="@dimen/sp45" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp250"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp36"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp150"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rela_chatroom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp170"
        android:background="@drawable/btn_contacts_head_press"
        android:clickable="true" >

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp50"
            android:src="@drawable/defpic" />

        <TextView
            android:id="@+id/tv_chatroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@id/img2"
            android:text="群聊"
            android:textColor="#000000"
            android:textSize="@dimen/sp45" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp150"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rela_mark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp170"
        android:background="@drawable/btn_contacts_head_press"
        android:clickable="true" >

        <ImageView
            android:id="@+id/img3"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp50"
            android:src="@drawable/defpic" />

        <TextView
            android:id="@+id/tv_biaoqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@+id/img3"
            android:text="标签"
            android:textColor="#000000"
            android:textSize="@dimen/sp45"  />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp150"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rela_publicno"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp170"
        android:background="@drawable/btn_contacts_head_press"
        android:clickable="true" >

        <ImageView
            android:id="@+id/img4"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp50"
            android:src="@drawable/defpic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@+id/img4"
            android:text="公众号"
            android:textColor="#000000"
            android:textSize="@dimen/sp45"  />
    </RelativeLayout>

</LinearLayout>